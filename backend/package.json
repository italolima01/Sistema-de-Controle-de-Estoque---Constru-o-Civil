{
  "name": "estoque-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "seed": "ts-node src/seed.ts",
    "seed:docker": "docker exec buildstock-backend npm run seed",
    "reset": "ts-node src/reset-db.ts",
    "reset:docker": "docker exec buildstock-backend npm run reset"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.1",
    "@types/cors": "^2.8.13",
    "@types/pg": "^8.10.0",
    "typescript": "^5.6.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}
